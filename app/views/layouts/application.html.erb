<!DOCTYPE html>
<html>
<head>
  <title>Pokemon!</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Covered+By+Your+Grace|Raleway' rel='stylesheet' type='text/css'>
  <link type="text/css" rel="stylesheet" href="assets/pokemons.css.scss" />
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to image_tag("pokemongologo.png",  class: "logo", size: "60x30"), root_path, class: 'navbar-brand', style: 'margin-bottom:5px;margin-top:0;' %>
        <%= link_to 'TrackYoPokeMon', root_path, class: 'navbar-brand brand-name', style: "margin-bottom:0px;margin-top:5px;color:#d43830;"%>
      </div>
    </div>
  </nav>
  <div style="width:800px;margin:0 auto;">
    <%= yield %>
  </div>
</body>
</html>
